<div>
  <div>
    <h1>
      Delivery Tracker
    </h1>
    <p>Know if something gets lost in the mail.</p>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
     Expecting a package?
    </h2>

    <form action="/insert_delivery" method="post">

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="supposed_to_arrive_on_box">
          Supposed to arrive on
        </label>

        <input type="date" id="supposed_to_arrive_on_box" name="query_supposed_to_arrive_on">
      </div>

      <div>
        <label for="details_box">
          Details
        </label>
        <textarea id="details_box" name="query_details" rows="3"></textarea>
      </div>

      <input type ="hidden" name="query_arrived" value="false">

      <button>
        Log delivery
      </button>
    </form>
  </div>
</div>

<hr>
<div class = "waiting_on">
<h2>Waiting on</h2>
  <div>
       
      <% @list_of_deliveries.each do |a_delivery| %>
   <ul>
      <li>

      <div>
          <%= a_delivery.description %>
      </div>

        <div>
          <p>Supposed to arrive on <%= a_delivery.supposed_to_arrive_on %></p>
        </div>

        <div>
          <%= a_delivery.details %>
        </div>

        <div>
          <a href="/deliveries/<%= a_delivery.id %>">
            Show details
          </a>
        </div>
    
      </li>
    </ul>
      <% end %>
  </div>
</div>


<hr>

<div class = "received" >
<h2>Received</h2>




</div>
